{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "nqthai95/multi-client-sample", 
      "hostname": "client", 
      "essential": false 
    },
    {
      "name": "server",
      "image": "nqthai95/multi-server-sample", 
      "hostname": "api", 
      "essential": false
    },
    {
      "name": "worker",
      "image": "nqthai95/multi-worker-sample",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "nqthai95/multi-nginx-sample",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}